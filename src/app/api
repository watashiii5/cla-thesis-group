// lib/api.ts
const API_URL = process.env.NEXT_PUBLIC_API_URL || 'http://localhost:8000';

export async function generateSchedule(applicants, rooms) {
  const response = await fetch(`${API_URL}/api/schedule`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ applicants, rooms }),
  });
  
  if (!response.ok) {
    throw new Error('Failed to generate schedule');
  }
  
  return response.json();
}

export async function uploadCSVAndSchedule(file) {
  const formData = new FormData();
  formData.append('file', file);
  
  const response = await fetch(`${API_URL}/api/schedule/upload`, {
    method: 'POST',
    body: formData,
  });
  
  if (!response.ok) {
    throw new Error('Failed to upload and schedule');
  }
  
  return response.json();
}